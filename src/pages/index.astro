---
import Layout from "../layouts/Layout.astro";

import Header from "../sections/Header.astro";
import Home from "../sections/Home.astro";
import AboutMe from "../sections/AboutMe.astro";
import { HeroParallaxProjects } from "../components/HeroParallaxProjects.jsx";
import ProjectsMobile from "../sections/ProjectsMobile.astro";
import Footer from "../sections/Footer.astro";


---

<Layout title="Marc Puig Portfolio">
	<Header />
	<main
		class="bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-100 via-gray-200 to-gray-400
	dark:bg-gradient-to-t dark:from-purple-800 dark:to-black
	font-firaCode">
		<Home />
		<div class="block lg:hidden">
			<ProjectsMobile />
		</div>
		<div class="hidden lg:block">
			<HeroParallaxProjects client:load />
		</div>
		<AboutMe />
	</main>
	<Footer />
</Layout>
